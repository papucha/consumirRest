			<!-- <simple>{{string1}}</simple> -->
			<!-- </setHeader> -->
			<!-- <log id="_data2" message="El header1 ${header.header1}" /> -->
			<!-- <setHeader headerName="header2"> -->
			<!-- <simple>{{string2}}</simple> -->
			<!-- </setHeader> -->
			<!-- <log id="_data2" message="El heade2 ${header.header2}" /> -->
			<setProperty id="_property19853" propertyName="Numero1">
				<simple>${body.num1}</simple>
			</setProperty>
			<setProperty id="_property29314545"
				propertyName="Numero2">
				<simple>${body.num2}</simple>
			</setProperty>
			<setProperty id="_property3" propertyName="Operador">
				<simple resultType="java.lang.String">${body.operador}</simple>
			</setProperty>
			<removeHeaders pattern="*" />
			<setHeader headerName="Content-Type">
				<constant>application/json</constant>
			</setHeader>
			<setHeader headerName="CamelHttpMethod">
				<constant>POST</constant>
			</setHeader>
			<marshal>
				<json library="Jackson" prettyPrint="true" />
			</marshal>
			<log id="_data63" message="Marshall: ${body}" />
			<log id="_data63" message="Iniciando pass throught" />
			<to uri="{{servicio.rest}}" />
			<log id="_data64" message="Resultado de la operaciÃ³n: ${body}" />
			<process id="_process00000" ref="Clase" />
			<setBody id="_setBody099">
				<simple>${body}</simple>
			</setBody>
		</route>

	</camelContext>

